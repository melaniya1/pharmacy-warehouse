<Page x:Class="Shop.final"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="550" Background="#95DBC1"
      Title="final">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Width="450">
            <StackPanel Margin="0 20 0 20">
                <TextBlock TextWrapping="Wrap" FontSize="35" FontWeight="SemiBold" Text="Продукт успешно оформлен" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF47695D" TextAlignment="Center"/>
                <Button x:Name="btnBack1" Content="Вернуться к списку" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Style="{StaticResource btnFill}" Click="btnBack1_Click"/>
                <Button x:Name="btnBack2" Content="Выйти" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Style="{StaticResource btnFill}" Click="btnBack2_Click"/>


            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
